---
import { getCourses } from '../lib/notion.js';

const courses = await getCourses();
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <title>课程列表</title>
  </head>
  <body>
    <h1>课程列表</h1>
    <ul>
      {courses.map((course) => (
        <li key={course.id}>
          <strong>{course.title}</strong><br />
          类别：{course.category}  |  价格：¥{course.price}
        </li>
      ))}
    </ul>
  </body>
</html>