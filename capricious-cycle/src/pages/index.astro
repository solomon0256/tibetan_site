---
import { getCourses } from "../lib/notion.js";
const courses = await getCourses();
---

<html lang="zh-CN">
  <head><meta charset="utf-8" /><title>课程列表</title></head>
  <body>
    <h1>课程列表</h1>
    <ul>
      {courses.map(course => (
        <li>
          <a href={`/courses/${course.slug}`}>{course.title}</a>
          <span>类别：{course.category} 价格：￥{course.price}</span>
        </li>
      ))}
    </ul>
  </body>
</html>