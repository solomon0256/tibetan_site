---
import TopBar from '../../components/layout/TopBar.astro'
import SideToolBar from '../../components/layout/SideToolBar.astro'
import TravelTypeTabs from './TravelTypeTabs.astro'
import RouteSuggestion from './RouteSuggestions.astro'
import ScenicEntryList from './ScenicEntryList.astro'
import RecentlyViewed from './RecentlyViewed.astro'

// 默认激活类型（可改为响应式）
const activeType = "自由探索"
const types = ["自由探索", "信仰朝圣", "文化体验", "生态之旅"]
---

<div class="flex">
  <SideToolBar />

  <main class="flex-1 min-h-screen bg-white">
    <TopBar title="旅游与景观" />

    <!-- 类型切换区 -->
    <section class="px-6 py-4 border-b border-gray-200">
      <TravelTypeTabs types={types} activeType={activeType} id="travel-type-tabs" />
    </section>

    <!-- 推荐路线 -->
    <section class="px-6 py-6">
      <h2 class="text-xl font-semibold mb-4">推荐路线</h2>
      <RouteSuggestion routes={[]} />
    </section>

    <!-- 景点条目 -->
    <section class="px-6 py-6">
      <h2 class="text-xl font-semibold mb-4">景点分类浏览</h2>
      <ScenicEntryList entries={[]} />
    </section>

    <!-- 最近浏览 -->
    <section class="px-6 py-6 border-t border-gray-200">
      <h2 class="text-lg font-medium mb-2">最近浏览</h2>
      <RecentlyViewed />
    </section>
  </main>
</div>