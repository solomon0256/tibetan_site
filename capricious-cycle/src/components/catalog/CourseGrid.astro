---
const { courses = [] } = Astro.props;
---

<ul class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  {courses.map((course: { title: string; category: string; slug: string }) => (
    <li class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition">
      <h3 class="text-lg font-semibold mb-1">{course.title}</h3>
      <p class="text-xs text-gray-500 mb-3">分类：{course.category}</p>
      <a href={`/courses/${course.slug}`} class="text-blue-600 hover:underline text-sm">进入课程 →</a>
    </li>
  ))}
  {courses.length === 0 && (
    <li class="col-span-full text-center text-gray-400 py-8">暂无课程数据</li>
  )}
</ul>