---
const { entries = [] } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  {/* @ts-ignore */}
  {entries.map((entry: any) => (
    <button
      class="bg-white border border-gray-300 rounded p-4 text-left shadow hover:shadow-md transition"
      data-entry={entry.id}
    >
      <h3 class="text-lg font-semibold mb-1">{entry.title}</h3>
      <p class="text-sm text-gray-600 line-clamp-2">{entry.summary}</p>
    </button>
  ))}
</div>