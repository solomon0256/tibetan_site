{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schemaVersion": "1.0.0",
  "title": "Course Schema",
  "type": "object",
  "required": ["id", "title", "slug", "category", "price", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "课程唯一标识符，建议使用 Notion 中的 UUID"
    },
    "title": {
      "type": "string",
      "description": "课程标题"
    },
    "slug": {
      "type": "string",
      "description": "URL 友好的标识符"
    },
    "category": {
      "type": "string",
      "description": "课程所属分类"
    },
    "price": {
      "type": "number",
      "description": "课程价格，单位为元或美元等"
    },
    "h5pId": {
      "type": "string",
      "description": "对应的 H5P 互动资源 ID",
      "nullable": true
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "最后更新时间"
    }
  },
  "additionalProperties": false
}